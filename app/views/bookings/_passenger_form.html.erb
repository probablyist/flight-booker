<%= form_with model: @booking do |f| %>
  <%= f.fields_for :passengers do |passenger_info| %>
    <%= passenger_info.label :name %>
    <%= passenger_info.text_field :name %>
    <%= passenger_info.label :email %>
    <%= passenger_info.email_field :email %>
  <% end %>
  <%= f.hidden_field :flight_id, valud: params[:flight_id] %>
  <%= f.submit "Complete Booking" %>
<% end %>
